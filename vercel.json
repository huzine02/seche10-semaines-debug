{
  "rewrites": [
    { "source": "/blog/:slug", "destination": "/blog/:slug/index.html" },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(Googlebot|bingbot|Perplexity|ChatGPT|ClaudeBot|GPTBot|Bytespider|Slurp|DuckDuckBot|Baiduspider|YandexBot|facebookexternalhit|Twitterbot|LinkedInBot|WhatsApp).*"
        }
      ],
      "destination": "/_prerender/index.html"
    },
    { "source": "/a-propos", "destination": "/a-propos/index.html" },
    { "source": "/((?!blog/)(?!_prerender/)(?!a-propos/)(?!assets/)(?!blog-images/)(?!favicon)(?!manifest)(?!sw\\.js)(?!sitemap)(?!robots)(?!google)(?!llms).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/blog/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, s-maxage=604800" }
      ]
    },
    {
      "source": "/llms.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ]
}
